	<version>1.0.4</version>
	<description>COM_RSGALLERY2_XML_DESCRIPTION</description>

	<scriptfile>install.rsg2.php</scriptfile>

	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
	<update> <!-- Runs on update; New in 2.5 -->
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update> 
 
	<files folder="site">
		<filename>index.html</filename>
	</files>

	<administration>
		<menu view="com_rsg2" 
			img="administrator/components/com_rsg2/images/rsg2_menu.png">COM_RSG2_MENU</menu>
		<submenu>
			<!-- Note that all & must be escaped to &amp; for the file to be valid XML and be parsed by the installer -->
			<menu view="COM_RSGALLERY2_MENU_CONTROL_PANEL" 
				img="class:config"
				link="option=com_rsgallery2">COM_RSGALLERY2_MENU_CONTROL_PANEL</menu>
			<menu view="COM_RSGALLERY2_MENU_GALLERIES" 
				link="option=com_rsgallery2&amp;rsgOption=galleries">COM_RSGALLERY2_MENU_GALLERIES</menu>
			<menu view="COM_RSGALLERY2_MENU_UPLOAD" 
				link="option=com_rsgallery2&amp;view=upload">COM_RSGALLERY2_MENU_UPLOAD</menu>
			<menu view="COM_RSGALLERY2_MENU_ITEMS"
				link="option=com_rsgallery2&amp;rsgOption=images">COM_RSGALLERY2_MENU_ITEMS</menu>
			<menu view="COM_RSGALLERY2_MENU_CONFIG"
				link="option=com_rsgallery2&amp;rsgOption=config&amp;task=showConfig">COM_RSGALLERY2_MENU_CONFIG</menu>
			<menu view="COM_RSGALLERY2_SUMMARY_TREE_VIEW" 
				link="option=com_rsg2&amp;view=summarytreeview">COM_RSGALLERY2_SUMMARY_TREE_VIEW</menu>
		</submenu>
		
		<files folder="admin">
			<folder>classes</folder>
			<folder>controllers</folder>
			<folder>helpers</folder>
		    <folder>images</folder>
			<folder>language</folder>
			<folder>models</folder>
			<folder>sql</folder>
